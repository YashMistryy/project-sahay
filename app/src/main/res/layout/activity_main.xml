<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <include layout="@layout/main_toolbar"/>
<!--        first row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:padding="4px"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

                <ImageView
                    android:id="@+id/custom_category_img1"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/masonry_category_img" />

            <TextView
                android:id="@+id/custom_category_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="29sp"
                android:textStyle="bold"
                android:text="Masonry"/>
        </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:padding="4px"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/custom_category_img2"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/automobile_category_img" />

            <TextView
                android:id="@+id/custom_category_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="29sp"
                android:textStyle="bold"
                android:text="AutoParts" />
        </LinearLayout>

    </LinearLayout>
<!--second row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:padding="4px"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:id="@+id/custom_category_img3"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/carpentry_category_img" />

                <TextView
                    android:id="@+id/custom_category_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="29sp"
                    android:textStyle="bold"
                    android:text="Carpentry"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:padding="4px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/custom_category_img4"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plumbing_category_img" />

                <TextView
                    android:id="@+id/custom_category_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="29sp"
                    android:textStyle="bold"
                    android:text="Plumbing"/>
            </LinearLayout>

        </LinearLayout>
<!--third row-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:padding="4px"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:id="@+id/custom_category_img5"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/electrical_category_img" />

                <TextView
                    android:id="@+id/custom_category_name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="29sp"
                    android:textStyle="bold"
                    android:text="Electrical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:padding="4px"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/custom_category_img6"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gardening_category_img" />

                <TextView
                    android:id="@+id/custom_category_name6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="29sp"
                    android:textStyle="bold"
                    android:text="Gardening" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/navigation_drawer_main" />
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>